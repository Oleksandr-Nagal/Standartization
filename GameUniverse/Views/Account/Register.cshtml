@{
    ViewData["Title"] = "Реєстрація";
}
<h1 class="text-center">Реєстрація</h1>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<div class="d-flex justify-content-center">
    <form class="w-50" method="post">
        <div class="mb-3">
            <label class="form-label">Ім'я користувача</label>
            <input type="text" name="username" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" name="email" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Пароль</label>
            <input type="password" name="password" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary w-100">Зареєструватися</button>
        <p class="mt-3 text-center">
            Вже є акаунт? <a asp-controller="Account" asp-action="Login">Увійдіть</a>
        </p>
    </form>
</div>
